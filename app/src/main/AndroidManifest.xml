<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.project2">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project2">

        <!-- LOGIN is now the launcher -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Screen -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"/>

        <!-- Admin Dashboard -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false"/>

        <!-- Add Course (Admin Only) -->
        <activity
            android:name=".AddCourseActivity"
            android:exported="false"/>

        <!-- Edit Course (Admin Only) -->
        <activity
            android:name=".EditCourseActivity"
            android:exported="false"/>

        <!-- USER dashboard -->
        <activity
            android:name=".LandingPageActivity"
            android:exported="false"/>

        <!-- Course Detail (Student View) -->
        <activity
            android:name=".CourseDetailActivity"
            android:exported="false"/>

        <!-- Assignment Detail (Student View) -->
        <activity
            android:name=".AssignmentDetailActivity"
            android:exported="false"/>

        <!-- Manage Assignments (Admin) -->
        <activity
            android:name=".ManageAssignmentsActivity"
            android:exported="false"/>

        <!-- Assignment Form (Admin - Add/Edit) -->
        <activity
            android:name=".AssignmentFormActivity"
            android:exported="false"/>

        <!-- Grade Assignment (Admin) -->
        <activity
            android:name=".GradeAssignmentActivity"
            android:exported="false"/>

    </application>

</manifest>
